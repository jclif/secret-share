<h3>Users</h3>
<ul>

<% @users.each do |user| %>
<li><%= user.username %>
  <% if @friendable_users.include?(user)%>
    <%= form_for @friendship do |f| %>
      <%= f.hidden_field :stalker_id, value: current_user.id %>
      <%= f.hidden_field :victim_id, value: user.id %>
      <%= f.submit "Stalk them?!"  %>
    <% end %>
  <% end %>
 </li>

<% end %>
</ul>